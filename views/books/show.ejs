<%- include('../partials/header') %>
    <p><a href="/books" class="nav-link">‚Üê Back to Bookshelf</a></p>

    <div id="book-section">
        <div id="book-details">
            <% if (book.isFavorite) {%>
                <h3 id="favorite-badge">‚ô•Ô∏é TOP PICK</h3>
            <% } %>
            <h1 class="book-title dm-serif-display"><%= book.title %></h1>
            <h2 class="book-title dm-serif-display">written by <%= book.author %></h2>
            <p><%= book.description %></p>
            <h3>Genre</h3>
            <p><%= book.genre %></p>
            <h3>Language</h3>
            <p><%= book.language %></p>
            <h3>More Info</h3>
            <p><%= book.pages %> pages</p>
            <p>Published in <%= book.year %> by <%= book.publisher %></p>
            <p>ISBN: <%= book.isbn %></p>
            <h3>üìö Collection</h3>
            <p><%= book.isOwned ? '‚úÖ You own this book.' : 'You do not own this book.' %></p>
            <h3>üìñ Reading List</h3>
            <p><%= book.wantToRead ? '‚úÖ This book is in your reading list.' : 'This book is not in your reading list.' %></p>
            <h3>Status</h3>
            <% if (book.isCompleted) { %>
                <p id="book-status">‚òÖ FINISHED READING</p>
            <% } else if (book.isReading) { %>
                <p id="book-status">CURRENTLY READING</p>
            <% } else { %>
                <p id="book-status">UNREAD</p>
            <% } %>
        </div>
        <img src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-L.jpg" alt="image of book cover"/>
    </div>

    <div id="show-page-buttons-div">
        <a href="/books/<%= book._id %>/edit" id="edit-book-link">edit book</a>
        <a href="/books/<%= book._id %>/delete" id="delete-book-link">delete book</a>
    </div>
</body>
</html>