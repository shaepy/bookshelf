<%- include('../partials/header') %>
    <p><a href="/" class="nav-link">← Go Home</a></p>
    <h1 class="dm-serif-display">Bookshelf</h1>
    <%- include('../partials/nav') %>
    <h2 class="dm-serif-display">You have <%= books.length %> books on your shelf 📚</h2>

    <input type="search" name="search-shelf" class="search-shelf" placeholder="🔎"/>

    <ul class="book-list">
        <% books.forEach(book => { %>
            <li class="book"><a href="/books/<%= book._id %>"><%= book.title %> by <%= book.author %></a></li>
        <% }); %>
    </ul>
</body>
</html>